<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateNoteActivity">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginRight="20dp"
        android:background="#F3EDED"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp"
        android:hint="Write here your title please"
        android:padding="10dp"
        android:id="@+id/title_in"
        android:textColor="#000"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#F1EEEE"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:padding="10dp"
        android:textAlignment="textStart"
        android:hint="Write here your note please"
        android:layout_below="@+id/title_in"
        android:id="@+id/discription_in"
        android:textColor="#000"
        android:gravity="start" />

    <Button
        android:id="@+id/update_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textAlignment="center"
        android:layout_marginLeft="30dp"
        android:layout_margin="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/custom_btn"
        android:text="Add Note"
        android:textColor="#fff"
        android:textStyle="bold"
        android:gravity="start"
        tools:ignore="RtlCompat" />

</RelativeLayout>